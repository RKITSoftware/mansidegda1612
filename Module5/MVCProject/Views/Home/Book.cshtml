@model IEnumerable<MVCProject.Models.Book>

@{
    ViewBag.Title = "Book";
}
<h2>List of Books</h2>

<p>
    @Html.ActionLink("Add Book", "Add")
</p>
<table class="table">
    <tr>
        <th>
           Book
        </th>
        <th>
            Author
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            
        </tr>
    }

</table>